<section class="subscribe-form gh-content gh-canvas">
  <div class="kg-card kg-callout-card kg-callout-card-grey">
    <h4 class="subscribe-form-title">Follow Along</h4>
    <p class="subscribe-form-description">Get the latest posts delivered right to your inbox</p>
    <form data-members-form="subscribe">
        <div class="form-group">
            <input type="email" class="subscribe-email" data-members-email placeholder="Your email address" autocomplete="false" />
            <button class="button primary" type="submit">
                <span class="button-content">Subscribe</span>
                <span class="button-loader">{{> "icons/loader"}}</span>
            </button>
        </div>
        <div class="message-success">
            <strong>Great!</strong> Check your inbox and click the link to confirm your subscription.
        </div>
        <div class="message-error">
            Please enter a valid email address!
        </div>
    </form>
  </div>
</section>
